@using Microsoft.AspNetCore.Identity
@model registrationform.Models.Booking
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "Create";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

<style>
    /* Style the dropdown button */
    .form-control {
        font-size: 16px; /* Increase font size */
        padding: 10px; /* Add padding */
        
    }

        /* Style the dropdown menu items */
        .form-control option {
            font-size: 16px; /* Increase font size */
            padding: 10px; /* Add padding */
            width: 100px; /* Set width */
            height: 00px; /* Set height */
        }
</style>

<h1>Create</h1>

<h4>Booking</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
          
            <div class="form-group">
                <label asp-for="Email"  class="control-label"></label>
                <input asp-for="Email" class="form-control " readonly value="@UserManager.GetUserAsync(User).Result.Email" />
                <span asp-validation-for="Email"  class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="service" class="control-label"></label>
                <h>Click to book our services</h><br>
                <select asp-for="service" class="form-control">
                    <option value="Manicure and Pedicure">Manicure and Pedicure</option>
                    <option value="Makeup Application">Makeup Application</option>
                    <option value="Body Scrubs and Wraps">Body Scrubs and Wraps</option>
                    <option value="Haircut and Styling">Haircut and Styling</option>
                    <option value="Facials">Facials</option>
                    <option value="Massage Therapy">Massage Therapy</option>
                    <option value="Hair Coloring">Hair Coloring</option>
                    <option value="Waxing">Waxing</option>
                    <option value="Eyebrow Shaping and Tinting">Eyebrow Shaping and Tinting</option>
                    <option value="Eyelash Extensions">Eyelash Extensions</option>
                    <option value="Hair Treatments">Hair Treatments</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary"  />
               
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index1">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
