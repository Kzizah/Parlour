
@model LoginViewModel

<div class="row">
    <form id="account" asp-controller="Portal" asp-antiforgery="true" asp-action="login" method="post">

        <span asp-validation-for="Name" class="text-danger"></span>
        <div class="input-group mb-3">
            <input asp-for="Name" class="form-control" placeholder="Name"/>
        </div>

        <span asp-validation-for="Password" class="text-danger"></span>
        <div class="input-group mb-3">
            <input asp-for="Password" autocomplete="new-password" class="form-control" placeholder="Password" />
        </div>

        <button type="submit" id="btnsubmit" class="btn btnalert-primary btn-block">Sign In</button>

    </form>
</div>

